# Musk Configuration - Matching sats-asset-manager-api
# =====================================================
# 
# This configuration connects to the same Elements node used by
# sats-asset-manager-api (Liquid testnet).
#
# Copy to musk.toml to use.

# =============================================================================
# Network Configuration
# =============================================================================
[network]
# Liquid testnet (same as sats-asset-manager-api)
network = "testnet"

# =============================================================================
# RPC Connection
# =============================================================================
[rpc]
# Same node as sats-asset-manager-api uses
# (from ELEMENTS_RPC_URL, ELEMENTS_RPC_USER, ELEMENTS_RPC_PASSWORD env vars)
url = "http://64.181.201.136:18891"
user = "elements"
password = "elementspass"

# =============================================================================
# Chain Configuration  
# =============================================================================
[chain]
# Liquid testnet genesis hash
# If not set, will be fetched from the node automatically
genesis_hash = "a771d8a8e75d8fa1b9bc08af6a5bde4f4fb4d7f01bd8b4b36e7cd97fb4b3d4e3"

